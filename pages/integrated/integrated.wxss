.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f7f7f7;
}

.section {
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #eee;
}

/* 状态面板样式 */
.status-panel {
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  padding: 15rpx;
  border-radius: 8rpx;
  margin: 15rpx 0;
  border: 1rpx solid #e0e0e0;
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.status-label {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.status-value {
  font-size: 28rpx;
  color: #333;
  background-color: #e8f5e9;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  color: #2e7d32;
}

.status-value.active {
  background-color: #e8f5e9;
  color: #2e7d32;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  margin: 20rpx 0;
}

.full-width-btn {
  width: 100% !important;
  margin: 10rpx 0 !important;
}

/* 动作识别按钮样式 */
.action-btn {
  width: 100% !important;
  margin: 20rpx 0 !important;
  background-color: #4CAF50 !important;
  color: white !important;
  font-size: 32rpx !important;
  padding: 20rpx !important;
  border-radius: 8rpx !important;
  border: none !important;
}

.action-btn.stop {
  background-color: #f44336 !important;
}

/* 基础按钮样式 */
button {
  margin: 0;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  line-height: 1.5;
  border: none;
}

button[type="primary"] {
  background-color: #1AAD19;
  color: white;
}

button[type="warn"] {
  background-color: #E64340;
  color: white;
}

button[type="default"] {
  background-color: #F8F8F8;
  color: #000000;
  border: 1px solid #CCCCCC;
}

button[disabled] {
  background-color: #DDDDDD;
  color: #999999;
}

/* 改进区域设置控件样式 */
.area-settings {
  width: 100%;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  box-sizing: border-box;
}

.radius-display {
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.radius-control {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 20rpx;
}

.radius-control button {
  width: 40px;
  height: 40px;
  line-height: 40px;
  padding: 0;
  font-size: 20px;
  font-weight: bold;
  margin: 0;
  flex-shrink: 0;
}

.area-buttons {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}

.area-buttons button {
  width: 48%;
}

.area-buttons button[type="warn"] {
  color: white !important;
}

.area-info {
  margin-top: 15px;
  padding: 10px;
  background-color: #F8F8F8;
  border-radius: 5px;
  border: 1px solid #EEEEEE;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
}

/* 初始获取位置按钮样式 */
.container:not(.map-visible) {
  justify-content: center;
}

.current-action {
  background-color: #e3f2fd;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.action-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.action-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1976d2;
}

/* 传感器数据样式 */
.sensor-data {
  background-color: #fff3e0;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.sensor-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #e65100;
  margin-bottom: 15rpx;
}

.sensor-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #666;
}

/* 动作统计样式 */
.action-stats {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
}

.stats-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.stats-content {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.stats-item {
  background-color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.action-name {
  color: #666;
  margin-right: 10rpx;
}

.action-count {
  color: #1976d2;
  font-weight: bold;
}

/* 步数计数器样式 */
.step-counter {
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 10rpx;
  background-color: #e8f5e9;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.step-count-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.step-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.step-count {
  font-size: 64rpx;
  font-weight: bold;
  color: #2e7d32;
}

.step-label {
  font-size: 32rpx;
  margin-left: 10rpx;
  color: #6d806e;
}
