.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100vh;
  padding: 10px;
  box-sizing: border-box;
}

.button-group {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  margin-top: 10px;
}

.full-width-btn {
  width: 100% !important;
}

button {
  margin: 5px;
  background-color: #1AAD19;
  color: white;
  padding: 8px 15px;
  border-radius: 5px;
}

button[type="warn"] {
  background-color: #E64340;
  color: white !important;
}

button[type="default"] {
  background-color: #F8F8F8;
  color: #000000;
  border: 1px solid #CCCCCC;
}

button[disabled] {
  background-color: #DDDDDD;
  color: #999999;
}

/* 改进区域设置控件样式 */
.area-settings {
  width: 100%;
  background-color: #F8F8F8;
  border-radius: 10px;
  padding: 10px;
  margin-top: 10px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  box-sizing: border-box;
}

.radius-display {
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
}

.radius-control {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 15px;
}

.radius-control button {
  width: 40px;
  height: 40px;
  line-height: 40px;
  padding: 0;
  font-size: 20px;
  font-weight: bold;
  margin: 0;
  flex-shrink: 0;
}

.area-buttons {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}

.area-buttons button {
  width: 48%;
}

.area-buttons button[type="warn"] {
  color: white !important;
}

.area-info {
  margin-top: 15px;
  padding: 10px;
  background-color: #F8F8F8;
  border-radius: 5px;
  border: 1px solid #EEEEEE;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
}

/* 初始获取位置按钮样式 */
.container:not(.map-visible) {
  justify-content: center;
}
